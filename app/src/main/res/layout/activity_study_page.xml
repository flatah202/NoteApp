<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Study_page"
    android:background="#E7e7E7"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">


        <ProgressBar
            android:id="@+id/progressBarCircle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/timer_recycle2"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/timer_recycle"
            android:rotation="-90" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/progressBarCircle"
            android:layout_alignTop="@+id/progressBarCircle"
            android:layout_alignEnd="@+id/progressBarCircle"
            android:layout_alignBottom="@+id/progressBarCircle"
            android:layout_marginStart="73dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="98dp"
            android:text=" 00:00:00"
            android:textSize="28dp"
            android:textColor="@color/orange_700"

            />


        <EditText
            android:id="@+id/inputTimer"
            android:layout_width="127dp"
            android:layout_height="66dp"
            android:layout_alignStart="@+id/progressBarCircle"
            android:layout_alignEnd="@+id/progressBarCircle"
            android:layout_alignBottom="@+id/progressBarCircle"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="135dp"
            android:hint=" Set your timer"
            android:textColorHint="@color/orange_700" />

        <ImageView
            android:id="@+id/buttonStartStop"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_below="@+id/progressBarCircle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="166dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="189dp"
            android:background="@drawable/stop"
            />

        <ImageView
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_below="@+id/progressBarCircle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="187dp"
            android:background="@drawable/start" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>