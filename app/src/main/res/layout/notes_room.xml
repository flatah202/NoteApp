<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints"
             tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:background="@color/orange_700"
            >

            <TextView
                android:id="@+id/note_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="4dp"
                android:text="@string/Title"
                android:textSize="28dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/input_note_show1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_title1"
                android:layout_alignStart="@+id/note_title1"
                android:layout_marginStart="1dp"

                android:layout_marginTop="-2dp"
                android:text="Notes"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/note_title1"
                app:layout_constraintTop_toTopOf="@+id/note_title1" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>

